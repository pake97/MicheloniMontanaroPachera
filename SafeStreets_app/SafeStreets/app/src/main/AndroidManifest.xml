<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ap.android.SafeStreets">
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" android:required="true"/>
    <uses-permission android:name="android.permission.INTERNET" android:required="true"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key"/>
        <activity android:name="com.ap.android.SafeStreets.MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name="com.ap.android.SafeStreets.MapActivity"
            android:parentActivityName="com.ap.android.SafeStreets.MainActivity">
        </activity>

        <activity android:name="com.ap.android.SafeStreets.StatisticManagerActivity"
            android:parentActivityName="com.ap.android.SafeStreets.MainActivity">

        </activity>

        <activity android:name="com.ap.android.SafeStreets.StartReportActivity"
            android:parentActivityName="com.ap.android.SafeStreets.MainActivity">

        </activity>
        <activity android:name="com.ap.android.SafeStreets.LicensePlateActivity"
            android:parentActivityName="com.ap.android.SafeStreets.StartReportActivity">
        </activity>
        <activity android:name="com.ap.android.SafeStreets.ReportViolationManagerActivity"
            android:parentActivityName="com.ap.android.SafeStreets.LicensePlateRecognizerActivity">
        </activity>
        <activity android:name="com.ap.android.SafeStreets.LicensePlateRecognizerActivity"
            android:parentActivityName="com.ap.android.SafeStreets.StartReportActivity">
        </activity>
    </application>

</manifest>